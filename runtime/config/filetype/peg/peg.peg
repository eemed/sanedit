WHITESPACE = [ \t\r\n];
_ = WHITESPACE*;

nl = "\r\n" / "\r" / "\n";

@show
comment = "#" (!nl .)* nl;

@show
@whitespaced
rule = (_ annotation)* rule_name "=" def+ ";" _ ;

@show
@whitespaced
@alias(identifier)
rule_name = id_chars+ &"=";

@show
@alias(constant)
annotation = "@" [a..zA..Z_-]+ ("(" [a..zA..Z_-]+ ")")?;

@whitespaced
def = clause (op? clause)*;

@show
@alias(operator)
op = "/";

@whitespaced
clause = preop? (parens / brackets / id_chars+ / string) postop?;

@whitespaced
parens = "(" def ")";

@whitespaced
brackets = "[" ("\\" escape_char / [^\]])* "]";

@show
string          = "\"" ("\\" escape_char / [^"])* "\"";
escape_char     = "0" / "t" / "n" / "r" / "\"" / "\\";
hex = "\\x" hex_digit+;
hex_digit = [a..fA..F0..9];

@show
@alias(operator)
postop = "?" / "*" / "+";

@show
@alias(operator)
preop = "!" / "&";

id_chars = [a..zA..Z_-];
